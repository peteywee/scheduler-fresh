rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function userOrgId() {
      return isSignedIn() ? request.auth.token.orgId : null;
    }

    // ============================================================================
    // ORGANIZATION-SCOPED STORAGE
    // ============================================================================
    // Pattern: orgs/{orgId}/staff/{staffId}/certifications/{certId}
    
    match /orgs/{orgId}/staff/{staffId}/certifications/{certId} {
      // Only allow access if user's custom auth token contains matching orgId
      allow read, write: if isSignedIn() && userOrgId() == orgId;
    }

    // General org file storage
    match /orgs/{orgId}/{allPaths=**} {
      allow read, write: if isSignedIn() && userOrgId() == orgId;
    }

    // ============================================================================
    // DEFAULT DENY ALL
    // ============================================================================
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}