rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function uid() { return request.auth.uid; }
    function org() { return isSignedIn() ? request.auth.token.orgId : null; }

    // Path pattern: orgs/{orgId}/users/{uid}/... or orgs/{orgId}/public/...
    match /orgs/{orgId}/users/{userId}/{allPaths=**} {
      allow write: if isSignedIn() && org() == orgId && uid() == userId;
      allow read: if isSignedIn() && org() == orgId && uid() == userId;
    }

    match /orgs/{orgId}/public/{allPaths=**} {
      allow read: if true; // public assets per org
      allow write: if false; // only via backend/admin if needed
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}