{
  "name": "scheduler-fresh",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
  "lint": "eslint \"scheduler-fresh/src/**\" \"src/**\" --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test:unit": "jest --passWithNoTests --coverage",
    "test:e2e": "playwright test",
    "prepare": "husky install",
    "verify": "pnpm lint && pnpm typecheck && pnpm build && pnpm test:unit"
  },
  "dependencies": {
    "next": "^14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "firebase-admin": "^11.11.0"
  },
  "devDependencies": {
  "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.1",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "firebase-tools": "^11.28.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json,css,scss,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
