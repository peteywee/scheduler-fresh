{
  "name": "scheduler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev:web": "next dev -p 3000",
    "dev:api": "firebase emulators:start --only auth,firestore,storage",
    "dev": "pnpm -C . run-p dev:web dev:api",
    "stop": "pnpm run kill:ports && pnpm run kill:node",
    "kill:ports": "pnpm dlx kill-port 3000 8080 9099 9199 || true",
    "kill:node": "pkill -f 'next|node|firebase' || true",
    "emu:kill": "pkill -f 'firebase emulators' || true",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "format": "prettier . --write",
    "build": "next build",
    "test": "vitest",
    "test:run": "vitest run --exclude \"src/**/firestore*.test.ts\"",
    "test:rules": "firebase emulators:exec --only firestore 'vitest run --config vitest.rules.config.ts'",
    "test:rerun": "bash ./scripts/rerun-tests.sh",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "gitleaks:scan": "sh -c \"if command -v gitleaks >/dev/null 2>&1; then gitleaks detect --redact --no-git --verbose || (echo '❌ gitleaks detected secrets' && exit 1); else echo '⚠️ gitleaks not found (install from https://github.com/gitleaks/gitleaks)'; fi\"",
    "gitleaks:protect": "sh -c \"if command -v gitleaks >/dev/null 2>&1; then gitleaks protect --staged --redact --verbose; else echo '⚠️ gitleaks not found (install from https://github.com/gitleaks/gitleaks)'; fi\"",
    "precommit:secrets": "pnpm run gitleaks:protect",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "scripts/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.19.3",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "embla-carousel-react": "^8.6.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "genkit": "^1.19.3",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.63.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "firebase-tools": "^14.17.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  }
}
