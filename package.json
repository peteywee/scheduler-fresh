{
  "name": "scheduler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev:web": "next dev -p 3000",
    "dev:api": "firebase emulators:start --only auth,firestore,storage",
    "dev": "pnpm -C . run-p dev:web dev:api",
    "stop": "pnpm run kill:ports && pnpm run kill:node",
    "kill:ports": "pnpm dlx kill-port 3000 8080 9099 9199 || true",
    "kill:node": "pkill -f 'next|node|firebase' || true",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "format": "prettier . --write",
    "build": "next build",
    "gitleaks:scan": "gitleaks detect --redact --no-git --verbose || (echo '⚠️ gitleaks not found or secrets detected.' && exit 1)",
    "gitleaks:protect": "gitleaks protect --staged --redact --verbose",
    "precommit:secrets": "pnpm run gitleaks:protect || echo '⚠️ gitleaks skipped (not installed) or failed'",
    "prepare": "husky",
    "emu": "pnpm dlx firebase-tools emulators:start --only auth,firestore,ui",
    "emu:kill": "pkill -f 'firebase emulators' || true"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "firebase": "^11.0.0",
    "firebase-admin": "^13.5.0",
    "next": "15.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "firebase-tools": "^14.17.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
